{
  "name": "gemini-fs",
  "displayName": "Gemini FS Chat",
  "description": "Interact with Gemini and your local file system via a chat interface.",
  "version": "0.0.1",
  "publisher": "YourPublisherName",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Chat",
    "Machine Learning"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gemini-fs.startChat",
        "title": "Start Gemini FS Chat",
        "category": "Gemini FS"
      },
      {
        "command": "gemini-fs.setApiKey",
        "title": "Set Gemini API Key",
        "category": "Gemini FS"
      }
    ],
    "configuration": {
      "title": "Gemini FS Chat",
      "properties": {
        "geminiFS.modelName": {
          "type": "string",
          "default": "gemini-pro",
          "description": "The Gemini model to use for chat interactions (e.g., 'gemini-pro', 'gemini-1.5-flash')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build:prod",
    "build": "pnpm run build:extension && pnpm run build:webview",
    "build:prod": "pnpm run build:extension:prod && pnpm run build:webview:prod",
    "watch": "npm-run-all --parallel watch:extension watch:webview",
    "build:extension": ".\\node_modules\\.bin\\esbuild.cmd ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:extension:prod": ".\\node_modules\\.bin\\esbuild.cmd ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch:extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "build:webview": ".\\node_modules\\.bin\\esbuild.cmd ./src/webview/script.js --bundle --outfile=out/webview.js --format=esm --platform=browser --sourcemap",
    "build:webview:prod": ".\node_modules\\.bin\\esbuild.cmd ./src/webview/script.js --bundle --outfile=out/webview.js --format=esm --platform=browser --minify",
    "watch:webview": "esbuild ./src/webview/script.js --bundle --outfile=out/webview.js --format=esm --platform=browser --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "@google/generative-ai": "^0.11.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.32",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.26.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
